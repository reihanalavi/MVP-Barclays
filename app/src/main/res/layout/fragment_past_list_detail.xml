<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="pasts"
            type="com.reihanalavi.mvpbarclays.models.Pasts" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/appBar_pastlistdetail"
            app:layout_constraintTop_toBottomOf="@id/imageView_pastlistdetail_thumb">
            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tabLayout_past"
                android:background="@color/colorPrimary"
                app:tabGravity="fill"
                app:tabMode="fixed">
            </com.google.android.material.tabs.TabLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:background="@android:color/darker_gray"
            android:imageUrl="@{pasts.strThumb}"
            android:id="@+id/imageView_pastlistdetail_thumb"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/appBar_pastlistdetail"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/viewPager_past">
        </androidx.viewpager.widget.ViewPager>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>